# Flaming Horse Environment Configuration
# Copy this file to .env and fill in your API keys

# Required for harness (xAI API)
XAI_API_KEY=your_xai_api_key_here

# Optional configuration
AGENT_MODEL=xai/grok-4-1-fast
USE_HARNESS=1

# Voice TTS backend
FLAMING_HORSE_TTS_BACKEND=qwen

# Voice reference directory (optional - overrides voice_clone_config.json)
# Set to switch between reference samples easily, e.g.:
#   FLAMING_HORSE_VOICE_REF_DIR=/Users/velocityworks/IdeaProjects/flaming-horse/assets/voice_ref
#   FLAMING_HORSE_VOICE_REF_DIR=/Users/velocityworks/IdeaProjects/flaming-horse/assets/voice_ref_2

# Offline mode for HuggingFace
HF_HUB_OFFLINE=1
TRANSFORMERS_OFFLINE=1
TOKENIZERS_PARALLELISM=false

# Parallel rendering (0=auto, N=use N jobs, -1=disable)
PARALLEL_RENDERS=0
